@model IsmekCrm.Ui.Models.TaskViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }
}
<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Task.PostDate" class="control-label"></label>
                <input asp-for="Task.PostDate" class="form-control" />
                <span asp-validation-for="Task.PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Title" class="control-label"></label>
                <input asp-for="Task.Title" class="form-control" />
                <span asp-validation-for="Task.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusList" class="control-label"></label><br />
                @*<label asp-for="StatusId" class="control-label"></label>
                    <input asp-for="StatusId" class="form-control" />
                    <span asp-validation-for="StatusId" class="text-danger"></span>*@
                @*<status asp-for="Task.StatusId" status-list="StatusList"></status>*@
                @*<select asp-for="Task.StatusId" asp-items="@(new SelectList(Model.StatusList,"Id","Name"))">
                    <option>Please select one</option>
</select>*@
                <status-helper asp-for="Model.Task.StatusId" status-list="Model.StatusList"></status-helper>
                
            </div>
            <div class="form-group">
                <label asp-for="Task.DueDate" class="control-label"></label>
                <input asp-for="Task.DueDate" class="form-control" />
                <span asp-validation-for="Task.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
